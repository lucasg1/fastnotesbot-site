---
const inviteUrl = Astro.props.inviteUrl || "#";
const supportUrl = Astro.props.supportUrl || "#";
---
<header class="sticky top-0 z-50 backdrop-blur bg-black/20 border-b border-white/10">
  <div class="container-xxl py-3 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/favicon.png" alt="FastNotes logo" width="32" height="32" class="h-8 w-8 rounded" loading="eager" decoding="async" />
      <span class="font-extrabold tracking-tight text-lg">FastNotes</span>
    </a>
    <nav class="flex items-center gap-4 sm:gap-6">
      <a href="#pricing" class="text-sm sm:text-base text-brand-200 hover:text-white transition">Pricing</a>
      <a href={supportUrl} target="_blank" rel="noopener noreferrer" class="text-sm sm:text-base text-brand-200 hover:text-white transition">Support</a>
      <a href={inviteUrl} class="btn !py-2 text-sm sm:text-base inline-flex items-center gap-2">
        <span>Add to Discord</span>
        <img src="/discord_logo.png" alt="Discord logo" width="18" height="18" class="inline-block" loading="lazy" decoding="async" />
      </a>
    </nav>
  </div>

</header>
